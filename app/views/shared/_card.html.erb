<% if local_assigns[:type] == "popular" %>
  <% @stories = @stories_popular %>
<% elsif local_assigns[:type] == "recent" %>
  <% @stories = @stories_recent %>
<% elsif local_assigns[:type] == "alpha" %>
  <% @stories = @stories_alphabetic %>
<% end %>

<div class= "master-container">
  <div class="card-container">
    <% @stories.each do |story| %>
      <% unless story.photo.nil? %>
        <div class="story-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path story.photo.path, width: 375, height: 500, gravity: 'center', crop: 'fill' %>')">
      <% else %>
        <div class="story-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path Story::placeholder, width: 375, height: 500, gravity: 'center', crop: 'fill' %>')">
      <% end %>
          <div class="story-content">
              <div class="story-head">
                <h2><%= story.title %></h2>
                <p>Written by <%= link_to story.user.nickname, user_path(story.user) %></p>

                <div class="rating">
                  <p style=" margin-bottom: 0;">Averate rating</p>
                  <div class="star_<%= story.id %>"></div>
                </div>

                <%= link_to "#story_#{story.id}", class: 'story-link', onclick: "openTab(event, 'story_#{local_assigns[:type]}_#{story.id}')" do %>
                  <%= image_tag "arrow-down.png" %>
                <% end %>
              </div>
          </div>
        </div>
    <% end %>
  </div>
</div>

<div class="story-details">
  <!-- render details partial in here -->
  <%= render "shared/banner", type: local_assigns[:type] %>
</div>

<% content_for(:afterjs) do %>
  <script>
    <% @stories.each do |story| %>
      $('.star_<%= story.id %>').raty({
        readOnly: true,
        score: <%= story.avg_rating %>,
        path: '/assets'
      });
    <% end %>
  </script>
<% end %>
