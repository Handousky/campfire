<div class="homepage" id="page">
  <video autoplay="" loop="" poster="" id="bgvid">
    <source src="http://res.cloudinary.com/handousky/video/upload/v1511467710/Campfireloop4_cfknf6.mp4" type="video/mp4">
  </video>
  <div id="overlay" class="cover blur-in">
    <%= link_to stories_path do %>
      <h1 data-heading="Campfire" class="campfire">Campfire</h1>
    <% end %>

    <%= link_to new_story_path, class: "arrow left-arrow" do %>
      <%= image_tag "arrow-left.png" %><p id="breakThrough" class="break-through" onclick="shakeThrough()">Write a Story</p>
    <% end %>

    <%= link_to stories_path, class: "arrow right-arrow" do %>
      <p id="breakThrough" class="break-through" onclick="shakeThrough()">Read a Story</p><%= image_tag "arrow-right.png" %>
    <% end %>

    <div class="homefooter">
      <%= link_to stories_path do %>
        <p class="interact text text-center">INTERACTIVE HORROR STORIES</p>
      <% end %>
    </div>
  </div>

  <div class="row pop-up">
    <div class="box small-6 large-centered" id="popupbox">
      <h2>Use headphones and turn up <br> the volume for a better experience!</h2>
      <p class="text-center">You can use your keyboard arrows <%= image_tag "keyboard-arrows.png", class: "keyboard-img" %> to navigate through the STORIES.</p>
      <p>Click anywhere to enter</p>
    </div>
  </div>
</div>

<% content_for (:afterjs) do %>
  <script>
    $(function() {
      $('.pop-up').hide();
      $('.pop-up').fadeIn(1000);

          $('#page').click(function (e) {

          $('.pop-up').fadeOut(700);
          $('#overlay').removeClass('blur-in');
          $('#overlay').addClass('blur-out');
          e.stopPropagation();

        });
     });

    // moving with arrows
    document.addEventListener("keyup", function(event) {
      event.preventDefault();
      if (event.keyCode === 37) {
        document.getElementById("left").click();
      } else if (event.keyCode === 38) {
        document.getElementById("up").click();
      } else if (event.keyCode === 39) {
        document.getElementById("right").click();
      } else if (event.keyCode === 40) {
        document.getElementById("down").click();
      }
    });
  </script>
<% end %>
