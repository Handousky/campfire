<%= simple_form_for([@story, @slide], remote: true) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-xs-7 col-xs-offset-2">
      <%= f.input :name, label: false, placeholder: "Name the Path" %>
    </div>
    <div class="col-xs-1" style="padding-left: 0;">
      <%= link_to "Test", story_slide_path(@story, @slide), class: 'btn btn-danger btn-md' %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 col-xs-offset-2">
      <%= f.input :photo, as: :attachinary %>
    </div>
    <div class="col-xs-4">
    <label for="selection">Listen:</label>
    <select id="selection">
      <option value="">- Select track -</option>
      <option value="/assets/doorbell.mp3">Flying in clouds</option>
      <option value="/assets/Sqeaking_door.mp3">Door</option>
    </select>
    <br/>
      <audio id="player" controls="controls">
        <source id="mp3_src" src="/assets/Sqeaking_door.mp3" type="audio/mpeg">
      Your browser does not support the audio element.
      </audio>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">

      <!-- toolbar container -->
      <div id="toolbar">
      </div>

      <!-- editor container -->
      <div id="editor-container">
      </div>
      <%= f.input :json, as: :hidden, input_html: { id: "json"} %>
      <%= f.input :narration, as: :hidden, input_html: { id: "narration"} %>

    </div>
  </div>
  <br>
<% end %>

<!-- Include Quill stylesheet -->
<link href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet">
