<%= simple_form_for([@story, @slide]) do |f| %>
  <%= f.error_notification %>
  <%= f.input :narration, label: "Narrative", placeholder: "Once upon a time in a creep hospital" %>
  <%= f.input :x_axis, label: "X axis" %>
  <%= f.input :y_axis, label: "Y axis" %>
  <%= f.input :photo, as: :attachinary %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
